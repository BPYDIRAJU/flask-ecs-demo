{
  "family": "flask-task",
  "executionRoleArn": "arn:aws:iam::805369546267:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "flask-ecs-demo",
      "image": "805369546267.dkr.ecr.ap-south-1.amazonaws.com/flask-ecs-demo:latest",
      "cpu": 256,
      "memory": 1024,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp",
          "appProtocol": "http"
        },
        {
          "containerPort": 5000,
          "hostPort": 5000,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/flask-task",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs",
          "mode": "non-blocking",
          "awslogs-create-group": "true",
          "max-buffer-size": "25m"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "3072",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  }
}
